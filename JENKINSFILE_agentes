pipeline {
    agent none

    stages {
        stage('Get Code') {
            agent { label 'linux' }
            steps {
                echo "=== AGENT ==="
                sh 'whoami && hostname'

                echo 'Downloading source code'
                git 'https://github.com/luisgalvan2245/helloworld.git'

                sh 'ls -la'
                echo WORKSPACE

                stash name: 'src', includes: '**'
            }
        }
        stage('Build') {
            agent { label 'linux' }
            steps {
                echo "=== AGENT ==="
                sh 'whoami && hostname'
                echo WORKSPACE

                echo 'Building app'
            }
        }
        stage('Tests') {
            parallel {
                stage('Unit') {
                    agent { label 'python' }
                    steps {
                        echo "=== AGENT ==="
                        sh 'whoami && hostname'
                        echo WORKSPACE

                        unstash 'src'
                        sh '''
                            export PYTHONPATH=$WORKSPACE
                            pytest -q --junitxml=results-unit.xml test/unit
                        '''
                        stash name: 'unit-results', includes: 'results-unit.xml'
                    }
                }

                stage('Service') {
                    agent { label 'python' }   // nodo con Python + Java (para WireMock)
                    steps {
                        echo "=== AGENT ==="
                        sh 'whoami && hostname'
                        echo WORKSPACE

                        unstash 'src'
                        sh '''
                            export PYTHONPATH=$WORKSPACE
                            export FLASK_APP=app/api.py

                            # Start Flask app in the background and log output
                            nohup flask run >/dev/null 2>&1 &

                            nohup java -jar /usr/local/bin/wiremock-standalone-3.13.0.jar --port 9090 \
                            --root-dir test/wiremock > wiremock.log 2>&1 &

                            sleep 10

                            pytest --junitxml=results-rest.xml test/rest
                        '''
                        stash name: 'service-results', includes: 'results-rest.xml'
                    }
                }
            }
        }
        stage('Results') {
            agent { label 'linux' }
            steps {
                echo "=== AGENT ==="
                sh 'whoami && hostname'
                echo WORKSPACE

                unstash 'unit-results'
                unstash 'service-results'

                junit 'results-*.xml'
            }
        }
    }
}
